# Database Connection
DATABASE_URL="postgresql://user:password@localhost:5432/bitune?schema=public"

# App Settings
MAX_UPLOAD_MB=50

# Storage: 'local' or 's3'
STORAGE_MODE="local"

# S3 / R2 Configuration (Required if STORAGE_MODE="s3")
# Example for Cloudflare R2:
# S3_ENDPOINT="https://<accountid>.r2.cloudflarestorage.com"
# S3_REGION="auto"
# S3_BUCKET="bitune-assets"
# S3_ACCESS_KEY_ID="<access_key>"
# S3_SECRET_ACCESS_KEY="<secret_key>"
# S3_PUBLIC_BASE_URL="https://pub-domain.com"

# Monetization
# The Treasury Wallet (NWC) that pays Artists when they stream.
# Format: nostr+walletconnect://...
PLATFORM_TREASURY_NWC=""
